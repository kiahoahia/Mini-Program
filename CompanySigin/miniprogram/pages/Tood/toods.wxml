<view>
  <view>
    <view class="weui-search-bar">
      <view class="weui-search-bar__form">
        <view class="weui-search-bar__box">
          <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
          <input type="text" class="weui-search-bar__input" placeholder="请输入搜索内容" />
        </view>
      </view>
      <view class="weui-search-bar__cancel-btn" bindtap='方法名a'>搜索</view>
    </view>
  </view>
</view>

<block wx:for="{{toods}}" wx:key="_id">
  <view class="toodslist">
    <view class="message">
      <view class="name">{{item.title}}</view> 
      <view>{{item.contents}}</view>
    <view class="time"> 
      <view>时间{{item.date}}</view>
    </view>
  </view>
  <view class="yu">
  <button bindtap="toodsdel" data-index="{{index}}" data-id="{{item._id}}">删除</button>  
  </view>
 </view> 
</block>
